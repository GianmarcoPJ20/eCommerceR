<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/products/edit/{{product.id}}" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="Nombre del producto"
                autofocus
                required
                value="{{product.name}}"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control"
                placeholder="Descripción del producto"
              >{{product.description}}</textarea>
            </div>
            <div class="form-group">
              <input
                type="number"
                name="price"
                class="form-control"
                placeholder="Precio"
                value="{{product.price}}"
                required
              />
            </div>
            <div class="form-group">
              <input
                type="number"
                name="stock"
                class="form-control"
                placeholder="Cantidad de stock"
                value="{{product.stock}}"
                required
              />
            </div>
            <div class="form-group">
              <select name="id_category" class="form-control" required>
                <option value="">Seleccionar categoría</option>
                {{#each categories}}
                  <option value="{{this.id}}" 
                    {{#if this.isSelected}}selected{{/if}}>
                    {{this.name}}
                  </option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <input
                type="text"
                name="url_imagen"
                class="form-control"
                placeholder="URL de la imagen"
                value="{{product.url_imagen}}"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Editar producto
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
