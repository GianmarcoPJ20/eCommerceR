<body class="view-listClient">
    <div class="container p-4">
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card card-list text-center shadow-sm">
                    <div class="card-body">
                        <img src="{{url_imagen}}" alt="{{name}}" class="img-fluid mb-3" style="max-height: 200px;">
                        <h3 class="card-title text-uppercase">{{name}}</h3>
                        <p class="card-text">{{description}}</p>
                        <p class="text-muted">Price: ${{price}}</p>
                        <p class="text-muted">Stock: {{stock}}</p>
                        <div class="mt-2">
                            <a class="btn btn-danger" href="/products/delete/{{id}}">Eliminar</a>
                            <a class="btn btn-secondary" href="/products/edit/{{id}}">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-6 mx-auto">
                <div class="card text-center p-4 shadow-sm">
                    <p class="mb-3">No existen productos disponibles.</p>
                    <a class="btn btn-primary" href="/products/add">Agregar productos</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>